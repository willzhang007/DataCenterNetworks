	//company image label
	JLabel coImageLabel;
	//ImageIcon imageIcon;

    JTextArea summaryText;
	JScrollPane centerScoll;
	JPanel jpanelCenter;
	JPanel subPanel;
	
	
	JPanel jpanelSouth;
	JButton addButton;
	JButton delButton;
	JButton refreshButton;
	JButton getSubServerInfo;

	
	//**********
	COTableModel coTableModel;
	
	PreparedStatement ps=null;
	Connection ct=null;
	ResultSet rs=null;
	
	//image loc !!!!!
	public static final String  netBeans="image/netbeans.png";
