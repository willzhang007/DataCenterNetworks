public class AdiministiveView extends JFrame implements ActionListener{
	
	//define components for view
	JLabel dataCenterLabel;
	JLabel enterLabel;
	JTextField textNorth;
	JButton queryButton;
	JButton returnButton;
	JPanel buttonpanel;
	JPanel jpanelNorth;
	
